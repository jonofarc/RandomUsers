<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonofarc.randomusers.ui.main.MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/profile_picture_iv"
        android:src="@drawable/portrait_placeholder"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
         />
    <TextView
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:id="@+id/user_Address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        />
    <TextView
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:id="@+id/user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        />
    <Button
        android:layout_marginTop="16dp"
        android:onClick="getNewUser"
        android:text="@string/lbl_get_user_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:onClick="saveUser"
        android:text="@string/save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:onClick="viewUsers"
        android:text="@string/view_saved_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
