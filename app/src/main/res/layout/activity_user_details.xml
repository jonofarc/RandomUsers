<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonofarc.randomusers.com.jonathanmaldonado.randomusers.ui.userDetails.UserDetailsActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/details_profile_picture_iv"
        android:src="@drawable/portrait_placeholder"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:textSize="24sp"
        android:id="@+id/details_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        />
    <TextView
        android:textSize="24sp"
        android:id="@+id/details_user_Address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        />
    <TextView
        android:textSize="24sp"
        android:id="@+id/details_user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        />


</LinearLayout>
